<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PayMActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardElevation="3dp"
        android:layout_margin="4dp"
        app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_m_titile"
        android:text="Maintenance Detail"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/signupColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_m_month"
        android:text="Maintenance Month:-"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_paydate"
        android:layout_width="match_parent"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Maintenance Pay  Date:-"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_paystatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="Status:-"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_paymode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="Pay Mode:-"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_pay_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shapeemail"
            android:id="@+id/radioGroup">
            <TextView
                android:layout_width="wrap_content"
                android:text="Pay Mode:-"

                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:id="@+id/radioButton"
                android:backgroundTint="@color/black"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Pay"
                android:id="@+id/radioButton2"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                />
        </RadioGroup>

        <Button
            android:id="@+id/bt_p_m"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Pay Maintenance"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@color/purple_700"

            android:background="@drawable/shapelogin"/>

    </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>